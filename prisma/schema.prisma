generator photon {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ROLE {
  PROJECT_MANAGER
  ADMIN
  STUDENT
}

enum PROJECT_ROLE {
  PARTICIPANT
  TEAM_LEAD
  OWNER
}

enum TOKEN_TYPE {
  AUTH
  REFRESH
}

model Project {
  id           String        @id @default(uuid())
  code         Int           @unique @default(autoincrement())
  name         String
  description  String?
  avatar       String        @unique
  participants Participant[]
  repo         String
  dueDate      DateTime
  userId       String?
  User         User?         @relation(fields: [userId], references: [id])
}

model User {
  id          String        @id @default(uuid())
  email       String?       @unique
  firstName   String
  lastName    String
  group       String
  password    String
  avatarColor String
  projects    Project[]
  role        ROLE
  participant Participant[]
}

model Participant {
  id        String       @id @default(uuid())
  userId    String
  user      User         @relation(fields: [userId], references: [id])
  projectId String
  project   Project      @relation(fields: [projectId], references: [id])
  role      PROJECT_ROLE
}
